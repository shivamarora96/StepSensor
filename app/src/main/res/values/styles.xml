<resources xmlns:app="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

<style name="AppFullscreen"  parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@android:color/black</item>
    <item name="colorPrimaryDark">#00000f</item>
    <item name="colorAccent">@android:color/transparent</item>
</style>
    <!--//Collapsing TOolbar Theme Text Properties-->
    <style name="changeingCollapsingTextSize"  app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor" >#ffffff</item>
        <item name="android:textSize">20dp</item>

    </style>


    <style name="FacebookLoginButton">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>



