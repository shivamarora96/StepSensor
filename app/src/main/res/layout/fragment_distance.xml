<?xml version="1.0" encoding="utf-8"?>


<android.support.design.widget.CoordinatorLayout
    android:id="@+id/FragmentDistance_coordinateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/FragmentDistance__AppBar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:theme="@style/AppTheme">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/FragmentDistance_CollapsingToolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@android:color/holo_red_light"
            app:expandedTitleTextAppearance="@style/changeingCollapsingTextSize"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_collapseMode="parallax">

                <ImageView

                    android:src="@drawable/distance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"

                    />

            </LinearLayout>
<!--
            <android.support.v7.widget.Toolbar
                android:id="@+id/FragmentDistance_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.AppBarOverlay"
                app:layout_collapseMode="pin">

            </android.support.v7.widget.Toolbar>-->

        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_margin="15dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@android:color/background_light">
                <TextView
                    android:id="@+id/FragmentDistance_stepcounttitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="DISTANCE WALKED"
                    android:textSize="19dp"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold|italic"
                    />

            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorAccent"
                >


                <android.support.v7.widget.CardView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    >
                    <org.eazegraph.lib.charts.ValueLineChart
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/FragmentDistance_linechart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:egUseCubic="true"
                        app:egUseOverlapFill="true"
                        app:egCurveSmoothness="0.3"
                        app:egIndicatorLineColor="#fc1222"
                        app:egLegendHeight="45dp"
                        app:egShowStandardValue="true"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:background="@android:color/holo_orange_light"
                        >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="Average :- "
                                android:textStyle="bold"
                                android:padding="3dp"
                                android:textColor="@android:color/holo_orange_dark"
                                />
                            <TextView
                                android:id="@+id/FragmentDistance__averageSteps"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:textColor="#ffffff"
                                android:text="0"
                                android:textSize="30dp"
                                android:background="@android:color/holo_orange_dark"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:background="@android:color/holo_orange_light"
                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="TOTAL :- "
                                android:textStyle="bold"
                                android:padding="3dp"
                                android:textColor="#006699"
                                />
                            <TextView
                                android:id="@+id/FragmentDistance_totalNoOfSteps"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:textColor="#ffffff"
                                android:text="0"
                                android:textSize="30dp"
                                android:padding="2dp"
                                android:background="@android:color/holo_blue_dark"
                                />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>



                </LinearLayout>


            </android.support.v7.widget.CardView>




        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>